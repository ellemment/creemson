{
	"include": ["**/*.ts", "**/*.tsx", "app/**/*.d.ts", "app/routes/users+/*",  "app/json.d.ts",  "app/icons.svg",  "app/routes/_content+/.$slug.tsx", "app/routes/_docs+/.blog.$slug.tsx"],
	"extends": ["@epic-web/config/typescript"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vitest/globals", "vite-plugin-arraybuffer/types"],
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2019",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"#app/*": ["./app/*"],
			"#tests/*": ["./tests/*"],
			"@/icon-name": [
				"./app/components/ui/icons/name.d.ts",
				"./types/icon-name.d.ts"
			]
		},
		"noEmit": true,
		"baseUrl": ".",
		"allowJs": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
	}
}
